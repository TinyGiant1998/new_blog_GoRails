<h1> This is my first blog</h1>

<% @blog_posts.each do |blog_post| %>
<div>
  <% if blog_post.draft? %>
  <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
  <% elsif blog_post.scheduled? %>
   <div class="p-2 rounded bg-blue-500 text-red-900">Scheduled</div>
  <% end %> 
<h2> <%= link_to blog_post.title, blog_post %></h2>
<%= blog_post.content %>
</div>
<% end %>

<% if @pagy.count > @pagy.limit %>
 <div class="my-16 flex justify-center">
  <%== pagy_nav(@pagy) %>
</div>
<% end %>




